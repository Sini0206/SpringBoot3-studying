{{>layouts/header}}

<!-- 입력 폼 작성 -->
<!-- action(어디에 보내는가) : localhost:8080/articles/create 페이지로 폼 데이터 보낸다 -->
<!-- method(어떻게 보내는가) : 속성값으로 post, get 2가지를 설정할 수 있음. 여기서는 post -->
<form class="container" action="/articles/create" method="post">
    <div class="mb-3">  <!-- 여백? -->
        <label class="form-label">제목</label>
        <input type="text" class="form-control" name="title">   <!-- DTO의 title 필드와 연결-->
    </div>
    <div class="mb-3">
       <label class="form-label">내용</label>
       <textarea class="form-control" rows="3" name ="content"></textarea>  <!--DTO의 content 필드와 연결-->
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/articles">Back</a>    <!--<a>태그: 특정 페이지로 이동하는 HTML 태그, 클릭 시 href 속성에 적힌 URL 주소로 요청 보냄-->
</form>

{{>layouts/footer}}